<Window x:Class="MiniCommander.CreateDirectoryDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MiniCommander"
        mc:Ignorable="d" Height="138.5" Width="250" ResizeMode="NoResize">
    <Grid Margin="0,0,4,3">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button Content="Create Directory" HorizontalAlignment="Left" Margin="74,68,0,0" Width="94" Grid.ColumnSpan="2" Height="20" VerticalAlignment="Top" Click="Button_Click"/>
        <Label Content="Name: " HorizontalAlignment="Left" Margin="5,22,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="newDirName" Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="22" Margin="53,26,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="177"/>

    </Grid>
</Window>
